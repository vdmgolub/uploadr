<h3 class='subheader'>Please select an image to upload <span>(max. <%= @max_file_size %> MB)</span></h3>
<hr/>

<%= s3_uploader_form(@options) do %>
  <%= file_field_tag :file, multiple: false %>
<% end %>

<div id="uploads_container"></div>
  <script id="template-upload" type="text/x-tmpl">
    <div id="upload_{%=o.unique_id%}" class="upload">
      <h5>{%=o.name%}</h5>
      <div class="progress progress-striped active"><div class="bar" style="height: 100%; width: 0%"></div></div>
    </div>
  </script>
</div>
